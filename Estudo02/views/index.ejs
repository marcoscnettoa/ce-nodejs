<!DOCTYPE html>
<html>
    <head>
        <%- include('partials/header') %>
    </head>
    <body>
        <%- include('partials/navbar') %>
        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h5 class="text-center">- Projeto 02 - Bem Vindo!</h5>
                </div>
                <div class="card">
                    <div class="card-body text-center">
                        Olá seja bem vindo!
                    </div>
                </div>
            </div>
        </div>
        <br/>
        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h5 class="text-center">- Perguntas Disponíveis -</h5>
                </div>
                <div class="card">
                    <div class="card-body">
                        <a href="/perguntar" class="btn btn-primary d-block">Cadastrar Pergunta</a>
                        <br/>
                        <ul class="list-group">
                            <% perguntas.forEach( perg => { %>
                            <li class="list-group-item">
                                <h3><%= perg.titulo %></h3>
                                <!--<p><%= perg.descricao %></p>-->
                                <a href="/perguntar/<%=perg.id%>/responder" class="btn btn-xs btn-dark">Responder</a>
                            </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <%- include('partials/footer') %>
    </body>
</html>